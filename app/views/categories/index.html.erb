<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>Categories</h2>
  </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox">
      	<div class="ibox-title">
           <h5>Category List</h5>
            <div class="ibox-tools">
               <%= link_to 'Create New Category', "#{new_category_path}?id=#{@template_id}", :class => "btn btn-w-m btn-primary", :title => "Add New Category"%>
            </div>
        </div>
        <div class="ibox-content">
		    <%= render :partial => "shared/notification"%>
          <% if @categories.present? %>
              <%= will_paginate @categories , renderer: BootstrapPagination::Rails %>
              <table class="footable table table-stripped toggle-arrow-tiny" data-page-size="15">
                <thead>
                <tr>
                  <th>Name</th>
                  <th>Description</th>
                  <th class="text-center">Actions</th>
                </tr>
                </thead>
                <tbody>
                <% @categories.each do |category| %>
                    <tr>
                      <td>
                        <%= category.name %>
                      </td>
                      
                      <td>
                        <%= category.description %>
                      </td>
                      
                      <td class="project-actions" style="text-align: center;">
                        <%= link_to '<i class="fa fa-list-alt"></i> Sub Categories'.html_safe, "#{sub_categories_path}?id=#{category.id}",  :method => 'get', :class => 'btn btn-white btn-sm' %>
                      </td>
                    </tr>
                <% end %>
                </tbody>
              </table>
          <% else %>
              <div class="alert alert-danger" style="text-align: center;"> No Categories Added Yet</div>
          <% end %>

        </div>
      </div>
    </div>
  </div>


</div>

