<div class="loginColumns animated fadeInDown" style="padding-top:8%;">
  <%= render :partial => 'shared/notification' %>
  <div class="row">
    <%= render :partial => 'shared/login_left_panel' %>

    <div class="col-md-6">
      <div class="ibox-content">
        <div><h3><%= APP_CONFIG[:product_name] %> Client Register</h3> </div>
        <div class="hr-line-dashed"></div>
        <%= form_tag register_clients_path do %>

            <div class="form-group">
              <input type="text" class="form-control" placeholder="Full Name" required="true" name="client[full_name]">
            </div>

            <div class="form-group">
              <input type="email" class="form-control" placeholder="Email" required="true" name="client[email]">
            </div>

            <div class="form-group">
              <input type="text" class="form-control" placeholder="Mobile" name="client[mobile]">
              <input type="hidden" class="form-control" value="<%= User::ROLES[CLIENT] %>" name="client[role_id]">
            </div>

            <div class="form-group">
              <input type="text" class="form-control" placeholder="Department" required="true" name="client[department]">
            </div>

            <p class="text-muted text-center">
              <small>You will receive OTP on email to login.</small>
            </p>

            <button type="submit" class="btn btn-success block full-width m-b">
              Register
            </button>

            <p class="text-muted text-center">
              <small>Already have an account?</small>
            </p>
            <a class="btn btn-sm btn-white btn-block" href="<%= login_clients_path %>">Client Login Here</a>

            <p class="text-muted text-center"></p>

        <% end %>
      </div>
    </div>
  </div>
  <hr />


</div>