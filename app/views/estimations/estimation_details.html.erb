<div class="row">
    <div class="col-lg-12">
        <div class="ibox ">
            <div class="ibox-title">
                <h5><%= @template.name %> Estimation for <%= @estimation.name %></h5>
            </div>
        </div>
    </div>
</div>

<%= render 'functional_scope_view' %>
<% create_button = false %>
<% @template.categories.each do |category| %>
    <% sub_categories = category.sub_categories %>
    <% if sub_categories.present? %>
        <% create_button = true %>
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox ">
                    <div class="ibox-title">
                        <h5><%= category.name %></h5>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                        </div>
                    </div>
                    <% sub_categories.each do |sub_category| %>
                        <div class="ibox-content custom-ibox">
                            <div class="row">
                                <div class="col-lg-4 custom-col">
                                    <%= text_field_tag 'estimation_details[sub_category_name]', sub_category.name, :class =>  "form-control custom-input", :placeholder => 'Sub category name' %>
                                </div>
                                <div class="col-lg-1 custom-col">
                                    <input type="text" placeholder="Applicable" class="form-control custom-input">
                                </div>
                                <div class="col-lg-1 custom-col">
                                    <input type="text" placeholder="Enter email" class="form-control custom-input">
                                </div>
                                <div class="col-lg-1 custom-col">
                                    <input type="text" placeholder="Enter email" class="form-control custom-input">
                                </div>
                                <div class="col-lg-1 custom-col">
                                    <input type="text" placeholder="Enter email" class="form-control custom-input">
                                </div>
                                <div class="col-lg-1 custom-col">
                                    <input type="text" placeholder="Enter email" class="form-control custom-input">
                                </div>
                                <div class="col-lg-1 custom-col">
                                    <input type="text" placeholder="Enter email" class="form-control custom-input">
                                </div>
                                <div class="col-lg-1 custom-col">
                                    <input type="text" placeholder="Enter email" class="form-control custom-input">
                                </div>
                                <div class="col-lg-1 custom-col">
                                    <input type="text" placeholder="Enter email" class="form-control custom-input">
                                </div>
                            </div>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    <% end %>
<% end %>

<%= render 'offer' %>

<% if create_button %>
  <a class="btn btn-primary btn-block" href="<%= login_clients_path %>">Create Estimation</a>
<% end %>
<p class="text-muted text-center" style="margin-bottom: 60px;"></p>