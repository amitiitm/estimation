<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>Functional Scope</h2>
  </div>
  <div class="col-lg-2">

  </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
<%= render :partial => "shared/notification"%>
  <div class="row">
    <div class="col-lg-12">
      <div class="tabs-container">
        <div class="ibox-title">
          <h5>Functional Scope</h5>
        </div>

        <div class="tab-content">
          <div id="tab-1" class="tab-pane active">
            <div class="panel-body">
              <%= form_tag :controller => 'estimations', :action => 'functional_scope', :id => 'functional_scope',:method => 'POST' do %>
                  <fieldset class="form-horizontal">

                    <div class="form-group row"><label class="col-sm-12 control-label">Usecases Count Low / Medium / High</label>
                      <div class="col-sm-4">
                        <%= number_field_tag 'functional_scope[usecase_low_count]', @functional_scope.usecase_low_count, :class =>  "form-control",:placeholder => 'Usecase Low Count', required: true %>
                      </div>
                      <div class="col-sm-4">
                        <%= number_field_tag 'functional_scope[usecase_medium_count]', @functional_scope.usecase_medium_count,:class =>  "form-control",:placeholder => 'Usecase Medium Count', required: true %>
                      </div>
                      <div class="col-sm-4">
                        <%= number_field_tag 'functional_scope[usecase_high_count]', @functional_scope.usecase_high_count,:class =>  "form-control",:placeholder => 'Usecase High Count', required: true %>
                      </div>
                    </div>

                    <div class="form-group row"><label class="col-sm-12 control-label">UI Pages Count Low / Medium / High</label>
                      <div class="col-sm-4">
                        <%= number_field_tag 'functional_scope[ui_low_count]', @functional_scope.ui_low_count, :class =>  "form-control",:placeholder => 'UI Low Count', required: true %>
                      </div>
                      <div class="col-sm-4">
                        <%= number_field_tag 'functional_scope[ui_medium_count]', @functional_scope.ui_medium_count,:class =>  "form-control",:placeholder => 'UI Medium Count', required: true %>
                      </div>
                      <div class="col-sm-4">
                        <%= number_field_tag 'functional_scope[ui_high_count]', @functional_scope.ui_high_count,:class =>  "form-control",:placeholder => 'UI High Count', required: true %>
                      </div>
                    </div>

                    <div class="form-group row"><label class="col-sm-12 control-label">Services Count Low / Medium / High</label>
                      <div class="col-sm-4">
                        <%= number_field_tag 'functional_scope[service_low_count]', @functional_scope.service_low_count, :class =>  "form-control",:placeholder => 'Service Low Count', required: true %>
                      </div>
                      <div class="col-sm-4">
                        <%= number_field_tag 'functional_scope[service_medium_count]', @functional_scope.service_medium_count,:class =>  "form-control",:placeholder => 'Service Medium Count', required: true %>
                      </div>
                      <div class="col-sm-4">
                        <%= number_field_tag 'functional_scope[service_high_count]', @functional_scope.service_high_count,:class =>  "form-control",:placeholder => 'Service High Count', required: true %>
                      </div>
                    </div>

                    
                    <%= hidden_field_tag 'functional_scope[estimation_id]', @estimation.id, :class => 'form-control' %>


                    <div class="form-group"><label class="col-sm-12 control-label"></label>
                      <button class="btn btn-primary " type="button" id="submit_button"><i class="fa fa-check"></i>&nbsp;Submit</button>
                      <button class="btn btn-white" type="button" id="cancel_button">Cancel</button>
                    </div>

                  </fieldset>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>

<script type="text/javascript">
    $( document ).ready(function() {
        $("#submit_button").click(function(){
            //$('#functional_scope').submit()
            $('form').submit()
        });
        $("#cancel_button").click(function(){
            location.href ="<%= estimations_path %>"
        });
    });
</script>
