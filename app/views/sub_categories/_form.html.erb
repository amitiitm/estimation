<div class="wrapper wrapper-content animated fadeInRight">
<%= render :partial => "shared/notification"%>
  <div class="row">
    <div class="col-lg-12">
      <div class="tabs-container">
        <div class="ibox-title">
          <h5>Add SubCategory Details</h5>
        </div>

        <div class="tab-content">
          <div id="tab-1" class="tab-pane active">
            <div class="panel-body">
              <%= form_for @sub_category,:html => {:id => 'submit_category'} do |f| %>
                  <fieldset class="form-horizontal">
                    <div class="form-group row"><label class="col-sm-12 control-label">SubCategory Name:</label>
                      <div class="col-sm-12">
                        <%= f.text_field :name,:class =>  "form-control",:placeholder => 'Please Enter SubCategory Name', required: true %>
                      </div>
                      <%= f.hidden_field :category_id, value: @category_id %>
                    </div>

                    <div class="row" >
                      <div class="col-sm-2">
                        <%= f.number_field :low_hours,:class =>  "form-control",:placeholder => 'Low Hours', required: true %>
                      </div>
                      <div class="col-sm-2">
                        <%= f.number_field :medium_hours,:class =>  "form-control",:placeholder => 'Medium Hours', required: true %>
                      </div>
                      <div class="col-sm-2">
                        <%= f.number_field :hours,:class =>  "form-control",:placeholder => 'High Hours', required: true %>
                      </div>

                      <div class="col-sm-3">
                        <%= f.select :offer, options_for_select(SubCategory::OFFER, :selected => @sub_category.offer),{:prompt => '-UI Garage Offer-'},{:class => 'form-control'} %>
                      </div> 

                      <div class="col-sm-3">
                        <%= f.select :class_name, options_for_select(SubCategory::CLASS_NAMES, :selected => @sub_category.class_name),{:prompt => '-Select Class Name for Calculation-'},{:class => 'form-control'} %>
                      </div> 
                    </div>



                    <div class="form-group row"><label class="col-sm-12 control-label">Description:</label>
                      <div class="col-sm-12">
                        <%= f.text_area :description, :class =>  "form-control" %>
                      </div>
                    </div>

                    <div class="form-group"><label class="col-sm-12 control-label"></label>
                      <button class="btn btn-primary " type="button" id="submit_button"><i class="fa fa-check"></i>&nbsp;Submit</button>
                      <button class="btn btn-white" type="button" id="cancel_button">Cancel</button>
                    </div>
                  </fieldset>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>

<script type="text/javascript">
    $( document ).ready(function() {
        $("#submit_button").click(function(){
            $('#submit_category').submit()
        });
        $("#cancel_button").click(function(){
            location.href ="<%= sub_categories_path %>?id=<%= @category_id %>"
        });
    });
</script>