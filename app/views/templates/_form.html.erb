<div class="wrapper wrapper-content animated fadeInRight">
<%= render :partial => "shared/notification"%>
  <div class="row">
    <div class="col-lg-12">
      <div class="tabs-container">
        <div class="ibox-title">
          <h5>Add Template Details</h5>
        </div>

        <div class="tab-content">
          <div id="tab-1" class="tab-pane active">
            <div class="panel-body">
              <%= form_for @template,:html => {:id => 'submit_template'} do |f| %>
                  <fieldset class="form-horizontal">
                    <div class="form-group"><label class="col-sm-12 control-label">Template Name:</label>
                      <div class="col-sm-12">
                        <%= f.text_field :name,:class =>  "form-control",:placeholder => 'Please Enter Template Name', required: true %>
                      </div>
                    </div>

                    <div class="form-group"><label class="col-sm-12 control-label">Description:</label>
                      <div class="col-sm-12">
                        <%= f.text_area :description, :class =>  "form-control" %>
                      </div>
                    </div>

                    <div class="form-group"><label class="col-sm-12 control-label"></label>
                      <button class="btn btn-primary " type="button" id="submit_button"><i class="fa fa-check"></i>&nbsp;Submit</button>
                      <button class="btn btn-white" type="button" id="cancel_button">Cancel</button>
                    </div>
                  </fieldset>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>

<script type="text/javascript">
    $( document ).ready(function() {
        $("#submit_button").click(function(){
            $('#submit_template').submit()
        });
        $("#cancel_button").click(function(){
            location.href ="<%= root_url %>"
        });
    });
</script>