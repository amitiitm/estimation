<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>Templates</h2>
  </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox">
      	<div class="ibox-title">
           <h5>Template List</h5>
            <div class="ibox-tools">
               <%= link_to 'Create New Template', new_template_path, :class => "btn btn-w-m btn-primary", :title => "Add New Template"%>
            </div>
        </div>
        <div class="ibox-content">
		    <%= render :partial => "shared/notification"%>
          <% if @templates.present? %>
              <%= will_paginate @templates , renderer: BootstrapPagination::Rails %>
              <table class="footable table table-stripped toggle-arrow-tiny" data-page-size="15">
                <thead>
                <tr>
                  <th>Name</th>
                  <th>Description</th>
                  <th class="text-center">Actions</th>
                </tr>
                </thead>
                <tbody>
                <% @templates.each do |template| %>
                    <tr>
                      <td>
                        <%= template.name %>
                      </td>
                      
                      <td>
                        <%= template.description %>
                      </td>
                      
                      <td class="project-actions" style="text-align: center;">
                        <%= link_to '<i class="fa fa-list-alt"></i> Categories'.html_safe, "#{categories_path}?id=#{template.id}",  :method => 'get', :class => 'btn btn-white btn-sm' %>
                        <%= link_to '<i class="fa fa-trash"></i> Delete'.html_safe, "#{template_path(template)}",  :method => 'delete', data: { confirm: 'Are you sure?' }, :class => 'btn btn-white btn-sm' %>
                      </td>
                    </tr>
                <% end %>
                </tbody>
              </table>
          <% else %>
              <div class="alert alert-danger" style="text-align: center;"> No Templates Added Yet</div>
          <% end %>

        </div>
      </div>
    </div>
  </div>


</div>

